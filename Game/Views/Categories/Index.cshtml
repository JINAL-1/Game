
@model IEnumerable<Game.Models.Category>
<!--when it loads it will recieve a list of categories -->

<h1>Pick a Category to browse our Store</h1>

<a asp-controller="Categories" asp-action="AddCategory">Add a new Category</a>

<ul>
    @foreach (var category in Model)
    {
        <li>
            <a asp-controller="Categories" asp-action="Browse" asp-route-categoryName="@category.Name">@category.Name</a>
        </li>
    }

</ul>

